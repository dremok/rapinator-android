<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateTextActivity">

    <TextView
        android:id="@+id/textViewGeneratedLyrics"
        android:layout_width="295dp"
        android:layout_height="282dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="184dp"
        android:scrollbars="vertical"
        android:text="@string/placeholder"
        android:textIsSelectable="true"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="64dp"
        android:text="Generating song title..."
        android:textSize="24sp"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@+id/textViewGeneratedLyrics"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStartOver"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:layout_marginTop="88dp"
        android:text="Start over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGeneratedLyrics"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>